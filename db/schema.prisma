generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma" // to not worry about foreign ket constrains 
}

model User {
  id        String    @id @default(cuid())
  name      String // for react native add @db.Text
  age       Int @default(0)
  email     String
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
  receipts  Receipt[]
}

model Receipt {
  id        String   @id @default(cuid()) // UUID (Universally Unique Identifier) or CUID (Collision-resistant Unique Identifier)
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade) // "onDelete: Cascade" means delteting User will delete all of his receipts 
  userId    String
  amount    Int // cents instead of dollars no floating points
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
}

